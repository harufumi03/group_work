<%= link_to t('common.sign_up'), new_user_path, id: "sign-up" %>
<h1>ユーザ一覧</h1>
<table>
  <thead>
    <tr>
      <th><%= "name" %></th>
      <th><%= "email" %></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to t('common.show'), user %></td>
    <td><%= link_to t('common.edit'), edit_user_path(user) %></td>
    <td><%= link_to t('common.destroy'), user, method: :delete, data: { confirm: t('common.confirm_destroy') } %></td>
  </tr>
<% end %>